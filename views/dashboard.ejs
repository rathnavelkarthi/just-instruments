<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JUST INSTRUMENTS - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }
    </style>
</head>
<body class="gradient-bg min-h-screen">
    <!-- Sidebar -->
    <div id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg sidebar-transition transform -translate-x-full lg:translate-x-0">
        <div class="flex items-center justify-between h-16 px-6 border-b">
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i data-lucide="shield-check" class="w-5 h-5 text-white"></i>
                </div>
                <span class="text-xl font-bold text-gray-900">JUST INSTRUMENTS</span>
            </div>
            <button onclick="toggleSidebar()" class="lg:hidden">
                <i data-lucide="x" class="w-6 h-6 text-gray-600"></i>
            </button>
        </div>
        
        <nav class="mt-6">
            <div class="px-6 space-y-2">
                <a href="#dashboard" onclick="showSection('dashboard')" class="flex items-center space-x-3 px-4 py-3 text-gray-700 bg-blue-50 rounded-lg">
                    <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                    <span>Dashboard</span>
                </a>
                <a href="#customers" onclick="showSection('customers')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="users" class="w-5 h-5"></i>
                    <span>Customers</span>
                </a>
                <a href="#instruments" onclick="showSection('instruments')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="settings" class="w-5 h-5"></i>
                    <span>Instruments</span>
                </a>
                <a href="#certificates" onclick="showSection('certificates')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="file-text" class="w-5 h-5"></i>
                    <span>Certificates</span>
                </a>
                <a href="#test-equipment" onclick="showSection('test-equipment')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="wrench" class="w-5 h-5"></i>
                    <span>Test Equipment</span>
                </a>
                <a href="#staff" onclick="showSection('staff')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="user-check" class="w-5 h-5"></i>
                    <span>Staff</span>
                </a>
                <a href="#reports" onclick="showSection('reports')" class="flex items-center space-x-3 px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg">
                    <i data-lucide="bar-chart-3" class="w-5 h-5"></i>
                    <span>Reports</span>
                </a>
            </div>
        </nav>
        
        <div class="absolute bottom-0 left-0 right-0 p-6 border-t">
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
                    <i data-lucide="user" class="w-4 h-4 text-gray-600"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-900"><%= user.name %></p>
                    <p class="text-xs text-gray-500"><%= user.role %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>

    <!-- Main Content -->
    <div class="lg:ml-64">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b">
            <div class="flex items-center justify-between h-16 px-6">
                <div class="flex items-center space-x-4">
                    <button onclick="toggleSidebar()" class="lg:hidden">
                        <i data-lucide="menu" class="w-6 h-6 text-gray-600"></i>
                    </button>
                    <h1 class="text-xl font-semibold text-gray-900">Dashboard</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="bell" class="w-5 h-5"></i>
                    </button>
                    <button onclick="refreshData()" class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="refresh-cw" class="w-5 h-5"></i>
                    </button>
                    <a href="/" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="log-out" class="w-4 h-4 inline mr-2"></i>
                        Logout
                    </a>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-6">
            <!-- Dashboard Section -->
            <div id="dashboardSection" class="section">
                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Total Customers</p>
                                <p class="text-2xl font-bold text-gray-900"><%= customers.length %></p>
                            </div>
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Total Instruments</p>
                                <p class="text-2xl font-bold text-gray-900"><%= instruments.length %></p>
                            </div>
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                <i data-lucide="settings" class="w-6 h-6 text-green-600"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Active Certificates</p>
                                <p class="text-2xl font-bold text-gray-900">24</p>
                            </div>
                            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                                <i data-lucide="file-text" class="w-6 h-6 text-yellow-600"></i>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Pending Calibrations</p>
                                <p class="text-2xl font-bold text-gray-900">8</p>
                            </div>
                            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                                <i data-lucide="clock" class="w-6 h-6 text-red-600"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Calibration Trends</h3>
                        <canvas id="calibrationChart" width="400" height="200"></canvas>
                    </div>
                    
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Certificate Status</h3>
                        <canvas id="certificateChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>

            <!-- Customers Section -->
            <div id="customersSection" class="section hidden">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Customers</h2>
                    <button onclick="showModal('addCustomerModal')" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        <span>Add Customer</span>
                    </button>
                </div>
                
                <div id="customersList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% customers.forEach(customer => { %>
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i data-lucide="building" class="w-5 h-5 text-blue-600"></i>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900"><%= customer.company_name %></h3>
                                    <p class="text-sm text-gray-500"><%= customer.contact_person %></p>
                                </div>
                            </div>
                            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Active</span>
                        </div>
                        <div class="space-y-2 text-sm text-gray-600">
                            <p class="flex items-center">
                                <i data-lucide="mail" class="w-4 h-4 mr-2"></i>
                                <%= customer.email %>
                            </p>
                            <p class="flex items-center">
                                <i data-lucide="phone" class="w-4 h-4 mr-2"></i>
                                <%= customer.phone %>
                            </p>
                            <p class="flex items-center">
                                <i data-lucide="map-pin" class="w-4 h-4 mr-2"></i>
                                <%= customer.address %>
                            </p>
                        </div>
                        <div class="mt-4 flex space-x-2">
                            <button onclick="showCustomerDetails('<%= customer.company_name %>')" class="text-blue-600 hover:text-blue-800 text-sm">View</button>
                            <button onclick="editCustomer('<%= customer.company_name %>')" class="text-green-600 hover:text-green-800 text-sm">Edit</button>
                            <button onclick="deleteCustomer('<%= customer.company_name %>')" class="text-red-600 hover:text-red-800 text-sm">Delete</button>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <!-- Instruments Section -->
            <div id="instrumentsSection" class="section hidden">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Instruments</h2>
                    <button onclick="showModal('addInstrumentModal')" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        <span>Add Instrument</span>
                    </button>
                </div>
                
                <div id="instrumentsList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% instruments.forEach(instrument => { %>
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                    <i data-lucide="settings" class="w-5 h-5 text-green-600"></i>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900"><%= instrument.instrument_name %></h3>
                                    <p class="text-sm text-gray-500"><%= instrument.model %></p>
                                </div>
                            </div>
                            <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">Active</span>
                        </div>
                        <div class="space-y-2 text-sm text-gray-600">
                            <p class="flex items-center">
                                <i data-lucide="hash" class="w-4 h-4 mr-2"></i>
                                <%= instrument.serial_number %>
                            </p>
                            <p class="flex items-center">
                                <i data-lucide="building" class="w-4 h-4 mr-2"></i>
                                <%= instrument.customers ? instrument.customers.company_name : 'N/A' %>
                            </p>
                            <p class="flex items-center">
                                <i data-lucide="factory" class="w-4 h-4 mr-2"></i>
                                <%= instrument.manufacturer || 'Manufacturer' %>
                            </p>
                        </div>
                        <div class="mt-4 flex space-x-2">
                            <button onclick="showInstrumentDetails('<%= instrument.instrument_name %>')" class="text-blue-600 hover:text-blue-800 text-sm">View</button>
                            <button onclick="editInstrument('<%= instrument.instrument_name %>')" class="text-green-600 hover:text-green-800 text-sm">Edit</button>
                            <button onclick="deleteInstrument('<%= instrument.instrument_name %>')" class="text-red-600 hover:text-red-800 text-sm">Delete</button>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </main>
    </div>

    <!-- Include modals and JavaScript -->
    <%- include('partials/modals') %>
    <%- include('partials/scripts') %>
</body>
</html>
